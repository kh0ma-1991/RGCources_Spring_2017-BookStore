%main.container.general-main-wrap
  %h1.mt-0.mb-25= t('my_orders')
  %p.lead.small.mb-10.visible-xs= t('sort_by')
  .dropdowns.dropdown.general-order-dropdown
    %a.dropdown-toggle.lead.small{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}
      = t(orders_current_filter)
      %i.fa.fa-angle-down.dropdown-icon.pull-right
    %ul.dropdown-menu
      - orders_filters.each do | filter |
        %li
          = link_to t(filter), orders_path(filter: filter)
  .visible-xs
    - ordered_orders.each do | order |
      .general-cart-item.divider-lg-bottom.pt-0
        %table.table
          %tr
            %td.col-half
              %span.in-grey-600= t('number')
            %td.col-half
              = link_to order do
                %span.general-order-number= order.code
          %tr
            %td
              %span.in-grey-600= t('completed_at')
            %td
              %span.in-grey-900.font-16.fw-300= order.updated_at.to_formatted_s(:db)
          %tr
            %td
              %span.in-grey-600= t('status')
            %td
              %span.font-16.fw-300{ class: ('text-success' if order.done?) }= t(order.status)
          %tr
            %td
              %span.in-grey-600= t('total')
            %td
              %strong.font-16= price_in_currency order.total_price
  .hidden-xs.mb-res-50
    %table.table.table-hover
      %thead
        %tr
          %th
            %span.in-grey-600= t('number')
          %th
            %span.in-grey-600= t('completed_at')
          %th
            %span.in-grey-600= t('status')
          %th
            %span.in-grey-600= t('total')
      %tbody
        - ordered_orders.each do | order |
          %tr
            %td
              = link_to order do
                %span.general-order-number= order.code
            %td
              %span.in-grey-900.font-16.fw-300= order.updated_at.to_formatted_s(:db)
            %td
              %span.font-16.fw-300{ class: ('text-success' if order.done?) }= t(order.status)
            %td
              %strong.font-16= price_in_currency order.total_price