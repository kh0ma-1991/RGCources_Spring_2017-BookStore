.col-sm-6.col-md-3{id: book.id}
  .general-thumb-wrap
    .thumbnail.general-thumbnail
      -if(!book.cover.file.nil?)
        %img.img-shadow.general-thumbnail-img{src: book.cover, alt: "book cover"}
      -else
        =render 'shared/book_cover_generator', book: book, width: 125, height: 200
      .thumb-hover
        .general-thumb-link-wrap
          = link_to book, class: 'thumb-hover-link' do
            %i.fa.fa-eye.thumb-icon{'aria-hidden': "true"}
          = link_to order_items_path(order_item: {book_id: book.id, quantity: 1}), method: :post, remote: true, class: "thumb-hover-link #{'disabled' if book.quantity <= 0}" do
            %i.fa.fa-shopping-cart.thumb-icon{'aria-hidden': "true"}
  .mb-35
    .clearfix
      %p.pull-right.font-16.in-gold-500= price_in_currency book.price
      %p.title.mr-55= book.title
    %span.divider-sm
    %p.lead.small= book.authors_decorated