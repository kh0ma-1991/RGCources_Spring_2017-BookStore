.col-sm-6.col-md-3
  .general-thumb-wrap
    .thumbnail.general-thumbnail
      -if(book.img)
        %img.img-shadow.general-thumbnail-img{src: book.img, alt: "book cover"}
      -else
        =render 'shared/book_cover_generator', book: book, width: 125, height: 200
      .thumb-hover
        .general-thumb-link-wrap
          = link_to book, class: "thumb-hover-link" do
            %i.fa.fa-eye.thumb-icon{'aria-hidden': "true"}
          %a.thumb-hover-link{href: "#"}
            %i.fa.fa-shopping-cart.thumb-icon
  .mb-35
    .clearfix
      %p.pull-right.font-16.in-gold-500= number_to_currency(book.price, unit: 'â‚¬')
      %p.title.mr-55= book.title
    %span.divider-sm
    %p.lead.small= book.authors.map { | author | author.name }.join(', ')