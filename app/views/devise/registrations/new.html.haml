%main.container.general-main-wrap
  .text-center
    %h3.general-login-title= t('signup')
    = link_to user_facebook_omniauth_authorize_path, class: 'general-login-icon' do
      %i.fa.fa-facebook-official
    %p.general-login-text= t('or')
  = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'general-form' }) do |f|
    = devise_error_messages!
    .form-group.mb-30
      = f.label :email, class: 'control-label input-label'
      = f.text_field :email, class: 'form-control', placeholder: true
    .form-group.mb-30
      = f.label :password, class: 'control-label input-label'
      = f.text_field :password, class: 'form-control', placeholder: true
    .form-group.mb-30
      = f.label :password_confirmation, class: 'control-label input-label'
      = f.text_field :password_confirmation, class: 'form-control', placeholder: true
    .text-center
      = f.submit t('signup'), class: 'btn btn-default mb-20'
  %p.general-sign-text.text-center
    = t('have_account')
    = link_to t('login'), new_user_session_path, class: 'in-gold-500'
