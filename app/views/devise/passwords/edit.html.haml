%main.container.general-main-wrap
  .text-center
    %h3.general-login-title= t('set_new_password')
  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'general-form' }) do |f|
    = devise_error_messages!
    = f.hidden_field :reset_password_token
    .form-group.mb-30
      = f.label :password, t('type_new_password'), class: 'control-label input-label'
      = f.password_field :password, autofocus: true, autocomplete: "off", class: 'form-control', placeholder: t('type_new_password')
    .form-group.mb-30
      = f.label :password_confirmation, t('confirm_new_password'), class: 'control-label input-label'
      = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: t('confirm_new_password')
    = f.submit t('change'), class: 'btn btn-default center-block mb-20'
