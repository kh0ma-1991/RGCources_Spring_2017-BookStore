%main.container.general-main-wrap
  .text-center
    %h1.mb-30= t('forgot_password')
    %p.general-password-text= t('pass_forgot_email')
  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'general-form' }) do |f|
    = devise_error_messages!
    .form-group.mb-25
      = f.email_field :email, class: 'form-control', autofocus: true, placeholder: t('enter_email_placeholder')
    -#%button.btn.btn-default.center-block.mb-20 Email Instructions
    = f.submit t('email_instructions'), class: 'btn btn-default center-block mb-20'
    .text-center
      = link_to t('cancel'), new_user_session_path, class: "in-gold-500 mb-20"