%main.container
  = render 'steps'
  = form_for @order, url: wizard_path,class: 'res-mb-100' do |f|
    .hidden-xs.hidden-sm
      .row
        .col-md-5
          %h3.general-subtitle Billing Address
          %p.general-info-text all fields are required
        .col-md-5.col-md-offset-1
          %h3.general-subtitle Shipping Address
    .row
      .col-md-5.mb-40
        .visible-xs.visible-sm
          %h3.general-subtitle Billing Address
          %p.general-info-text all fields are required
        = f.fields_for @order.shipping_address do |f|
          - errors = @order.shipping_address.errors
          = render 'address_form', errors: errors, f: f
      .col-md-5.col-md-offset-1.mb-60
        .visible-xs.visible-sm
          %h3.general-subtitle Shipping Address
        = f.fields_for @order.billing_address do |f|
          - errors = @order.billing_address.errors
          = render 'address_form', errors: errors, f: f
        .form-group.checkbox
          %label.checkbox-label
            %input.checkbox-input{type: "checkbox", hidden: "true"}
            %span.checkbox-icon
              %i.fa.fa-check
            %span.checkbox-text Use Billing Adress
    .general-text-align.mb-60
      %p.in-gold-500.font-18 Order Summary
      %table.general-summary-table
        %tr
          %td
            %p.font-16 Item Total:
          %td
            %p.font-16 €117.69
        %tr
          %td
            %p.font-16 Order Total:
          %td
            %p.font-16 €117.69
      = button_to t('save_and_continue'), wizard_path, method: :put, class: 'btn btn-default center-block mb-20'
      -#%button.btn.disabled.center-block.mb-20 Save and Continue

