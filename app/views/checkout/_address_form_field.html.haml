- placeholder ||= true
.form-group{class: field_has_error_class(errors, field)}
  = f.label field, class: 'control-label input-label'
  = f.text_field field, class: 'form-control', placeholder: placeholder
  = content_tag(:span, errors[field].join(', <br>').html_safe, class: 'help-block') if field_has_error?(errors, field)